{
  "name": "skole-monorepo",
  "version": "1.0.0",
  "license": "ISC",
  "author": "Skole Team",
  "scripts": {
    "start": "docker-compose up",
    "build": "docker-compose build",
    "prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "stop": "docker-compose down",
    "clean": "docker system prune -af",
    "clean:volumes": "docker volume prune -f",
    "backend:make-migrations": "docker-compose run --rm backend sh -c 'yarn make-migrations'",
    "backend:clear-migrations": "docker-compose run --rm backend sh -c 'yarn clear-migrations'",
    "backend:migrate": "docker-compose run --rm backend sh -c 'yarn migrate'",
    "backend:create-superuser": "docker-compose run --rm backend sh -c 'yarn create-superuser'",
    "backend:import-test-data": "docker-compose run --rm backend sh -c 'yarn import-test-data'",
    "backend:test": "docker-compose run --rm backend sh -c 'yarn test'",
    "backend:lint": "docker-compose run --rm backend sh -c 'yarn lint'",
    "frontend:gen": "docker-compose run --rm frontend sh -c 'yarn gen'"
  }
}
