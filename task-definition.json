{
  "family": "skole-service",
  "executionRoleArn": "arn:aws:iam::630869177434:role/skole-ecs-execution-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "630869177434.dkr.ecr.eu-central-1.amazonaws.com/backend:latest",
      "cpu": 512,
      "memoryReservation": 491,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "command": [
        "sh",
        "-c",
        "python manage.py wait_for_db && python manage.py migrate && python manage.py collectstatic --noinput && gunicorn --bind 0.0.0.0:8000 config.wsgi"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "backend-logs",
          "awslogs-region": "eu-central-1"
        }
      },
      "essential": true,
      "secrets": [
        {
          "name": "DEBUG",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/DEBUG"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/SECRET_KEY"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/DATABASE_URL"
        },
        {
          "name": "ALLOWED_HOSTS",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/ALLOWED_HOSTS"
        },
        {
          "name": "EMAIL_URL",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/EMAIL_URL"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/SECRET_ACCESS_KEY"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/S3_BUCKET_NAME"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/ACCESS_KEY_ID"
        },
        {
          "name": "AWS_REGION",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/REGION"
        },
        {
          "name": "CORS_ORIGIN_WHITELIST",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/CORS_ORIGIN_WHITELIST"
        }
      ]
    },
    {
      "name": "frontend",
      "image": "630869177434.dkr.ecr.eu-central-1.amazonaws.com/frontend:latest",
      "cpu": 512,
      "memoryReservation": 492,
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "command": ["yarn", "start"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "frontend-logs",
          "awslogs-region": "eu-central-1"
        }
      },
      "essential": true,
      "secrets": [
        {
          "name": "API_URL",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/API_URL"
        },
        {
          "name": "BACKEND_URL",
          "valueFrom": "arn:aws:ssm:eu-central-1:630869177434:parameter/BACKEND_URL"
        }
      ]
    }
  ]
}
